# Backend container env (mounted via compose env_file)
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# JWT Authentication
JWT_SECRET=change-me
# Set to 'never' (or '0'/'none') to create non-expiring tokens
JWT_EXPIRY=7d

# Speech-to-Text
STT_PROVIDER=google
GOOGLE_STT_API_KEY=

# LLM
LLM_PROVIDER=openai
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# Logging
LOG_LEVEL=info
CORS_ORIGIN=*
