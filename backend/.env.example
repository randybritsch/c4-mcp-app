# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
# Set to 'never' (or '0'/'none') to create non-expiring tokens
JWT_EXPIRY=7d

# Speech-to-Text (Google Cloud)
STT_PROVIDER=google
GOOGLE_STT_API_KEY=your-google-api-key
# Alternative: Azure STT
# STT_PROVIDER=azure
# AZURE_STT_KEY=your-azure-key
# AZURE_STT_REGION=eastus

# LLM (OpenAI or Anthropic)
LLM_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
# Alternative: Anthropic
# LLM_PROVIDER=anthropic
# ANTHROPIC_API_KEY=your-anthropic-key
# ANTHROPIC_MODEL=claude-3-opus-20240229

# Control4 MCP (c4-mcp HTTP server) Configuration
# Example (LAN/NAS): http://192.168.1.50:3333
C4_MCP_BASE_URL=http://127.0.0.1:3333
C4_MCP_TIMEOUT_MS=8000

# Back-compat / unused by default (this backend does NOT talk raw TCP to Director)
# CONTROL4_HOST=192.168.1.100
# CONTROL4_PORT=9000
# CONTROL4_API_KEY=your-control4-api-key

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/c4-mcp-app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60

# WebSocket
WS_MAX_CONNECTIONS=10
WS_HEARTBEAT_INTERVAL=30000

# CORS
CORS_ORIGIN=*
# For production, use specific domain:
# CORS_ORIGIN=https://your-domain.com
